<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>edu_sharing-extension-${rootArtifactId}-deploy-docker</artifactId>
    <version>${version}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>${artifactId}</artifactId>
  <packaging>pom</packaging>

  <name>${artifactId}</name>

  <properties>
    <chart.icon>
      https://upload.wikimedia.org/wikipedia/commons/thumb/c/c7/Edu-sharing_Logo.svg/200px-Edu-sharing_Logo.svg.png
    </chart.icon>
    <!--suppress UnresolvedMavenProperty -->
    <chart.version>${git.closest.tag.name}</chart.version>
    <helm.repository.url>https://artifacts.edu-sharing.com/repository/extension-${rootArtifactId}-helm/</helm.repository.url>
    <helm.repository.type>NEXUS</helm.repository.type>
    <!--suppress UnresolvedMavenProperty -->
    <helm.repository.user>${env.MAVEN_REPO_USER}</helm.repository.user>
    <!--suppress UnresolvedMavenProperty -->
    <helm.repository.pass>${env.MAVEN_REPO_PASS}</helm.repository.pass>
    <helm.version>3.4.1</helm.version>
  </properties>

  <build>

    <resources>
      <resource>
        <directory>src/main/chart</directory>
      </resource>
      <resource>
        <directory>src/main/chart</directory>
        <filtering>true</filtering>
        <includes>
          <include>Chart.yaml</include>
          <include>values.yaml</include>
        </includes>
      </resource>
    </resources>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <outputDirectory>${project.build.directory}/chart</outputDirectory>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <classesDirectory>${project.build.directory}/chart</classesDirectory>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>clean</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <excludeDefaultDirectories>true</excludeDefaultDirectories>
              <filesets>
                <fileset>
                  <directory>${project.build.directory}/chart</directory>
                  <includes>
                    <include>Chart.lock</include>
                  </includes>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>

    <pluginManagement>

      <plugins>

        <plugin>
          <groupId>com.kiwigrid</groupId>
          <artifactId>helm-maven-plugin</artifactId>
          <configuration>
            <chartDirectory>${project.build.directory}/chart</chartDirectory>
            <chartVersion>${chart.version}</chartVersion>
            <appVersion>${docker.tag}</appVersion>
            <helmVersion>${helm.version}</helmVersion>
            <lintStrict>true</lintStrict>
            <addDefaultRepo>false</addDefaultRepo>
            <uploadRepoStable>
              <name>edu-sharing.extension.${rootArtifactId}.helm</name>
              <url>${helm.repository.url}</url>
              <type>${helm.repository.type}</type>
              <username>${helm.repository.user}</username>
              <password>${helm.repository.pass}</password>
            </uploadRepoStable>
            <uploadRepoSnapshot>
              <name>edu-sharing.extension.${rootArtifactId}.helm</name>
              <url>${helm.repository.url}</url>
              <type>${helm.repository.type}</type>
              <username>${helm.repository.user}</username>
              <password>${helm.repository.pass}</password>
            </uploadRepoSnapshot>
          </configuration>
        </plugin>

      </plugins>

    </pluginManagement>

  </build>

  <profiles>

    <profile>

      <id>docker-build-timestamp</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.DOCKER_BUILD_TIMESTAMP</name>
          <value>true</value>
        </property>
      </activation>

      <properties>

        <!--suppress UnresolvedMavenProperty -->
        <chart.version>${git.closest.tag.name}+${build.timestamp}</chart.version>

      </properties>

    </profile>

  </profiles>

</project>

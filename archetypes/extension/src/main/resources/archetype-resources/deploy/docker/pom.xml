<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>edu_sharing-extension-${rootArtifactId}-deploy</artifactId>
    <version>${version}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>${artifactId}</artifactId>
  <packaging>pom</packaging>

  <name>${artifactId}</name>

  <properties>

    <docker.registry>${rootArtifactId}.docker.edu-sharing.com</docker.registry>
    <!--suppress UnresolvedMavenProperty -->
    <docker.username>${env.DOCKER_USERNAME}</docker.username>
    <!--suppress UnresolvedMavenProperty -->
    <docker.password>${env.DOCKER_PASSWORD}</docker.password>

    <docker.image>${rootArtifactId}/edusharing</docker.image>
    <docker.tag>${project.version}</docker.tag>

    <docker.verbose>true</docker.verbose>

    <docker.from.apache.exporter>docker.io/motork/apache_exporter:latest</docker.from.apache.exporter>
    <docker.from.apache.server>docker.io/php:${rendering.php.version}-apache</docker.from.apache.server>
    <docker.from.elasticsearch.exporter>docker.io/justwatch/elasticsearch_exporter:1.1.0</docker.from.elasticsearch.exporter>
    <docker.from.elasticsearch.server>docker.elastic.co/elasticsearch/elasticsearch:7.10.1</docker.from.elasticsearch.server>
    <docker.from.mariadb.exporter>docker.io/prom/mysqld-exporter:v0.12.1</docker.from.mariadb.exporter>
    <docker.from.mariadb.server>docker.io/bitnami/mariadb:10.4</docker.from.mariadb.server>
    <docker.from.minideb>docker.io/bitnami/minideb:buster</docker.from.minideb>
    <docker.from.openjdk>docker.io/openjdk:8-jdk-buster</docker.from.openjdk>
    <docker.from.postgresql.exporter>docker.io/wrouesnel/postgres_exporter:v0.8.0</docker.from.postgresql.exporter>
    <docker.from.postgresql.server>docker.io/bitnami/postgresql:12</docker.from.postgresql.server>
    <docker.from.redis.exporter>docker.io/oliver006/redis_exporter:v1.17.1</docker.from.redis.exporter>
    <docker.from.redis.server>docker.io/bitnami/redis:6.0.9</docker.from.redis.server>
    <docker.from.rediscluster.server>docker.io/bitnami/redis-cluster:6.0.9</docker.from.rediscluster.server>
    <docker.from.tomcat>docker.io/tomcat:${repository.tomcat.version}-jdk8</docker.from.tomcat>

  </properties>

  <build>

    <pluginManagement>

      <plugins>

        <plugin>
          <groupId>io.fabric8</groupId>
          <artifactId>docker-maven-plugin</artifactId>
          <configuration>
            <authConfig>
              <push>
                <username>${docker.username}</username>
                <password>${docker.password}</password>
              </push>
            </authConfig>
            <images>
              <image>
                <registry>${docker.registry}</registry>
                <build>
                  <contextDir>${project.build.directory}/build</contextDir>
                  <dockerFile>Dockerfile</dockerFile>
                </build>
              </image>
            </images>
          </configuration>
        </plugin>

      </plugins>

    </pluginManagement>

  </build>

  <profiles>

    <profile>

      <id>docker-build-timestamp</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.DOCKER_BUILD_TIMESTAMP</name>
          <value>true</value>
        </property>
      </activation>

      <properties>

        <docker.tag>${project.version}-${build.timestamp}</docker.tag>

      </properties>

    </profile>

  </profiles>

</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>edu_sharing-extension-${rootArtifactId}-deploy-docker-repository-build</artifactId>
    <version>${version}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>${artifactId}</artifactId>
  <packaging>jar</packaging>

  <name>${artifactId}</name>
  
  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>artifacts</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                alfresco-content-services-share-distribution,
                alfresco-pdf-renderer,
                alfresco-platform-community-distributionzip,
                edu_sharing-community-repository-backend-tomcat,
                edu_sharing-extension-${rootArtifactId}-repository-config,
                edu_sharing-extension-${rootArtifactId}-repository-webapp,
                jmx_prometheus_javaagent,
                postgresql,
                redisson-all,
                redisson-tomcat-7
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/artifacts</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>amps-1</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-backend-alfresco-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/alfresco/1</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>amps-2</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-plugin-cluster-repository-backend-alfresco-module,
                edu_sharing-plugin-remote-repository-backend-alfresco-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/alfresco/2</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>amps-3</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-plugin-cluster-repository-backend-services-module,
                edu_sharing-plugin-remote-repository-backend-services-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/edu-sharing/1</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>amps-4</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-extension-${rootArtifactId}-repository-backend-alfresco-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/alfresco/3</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <images>
            <image>
              <name>${docker.image}-repository-service:${docker.tag}</name>
            </image>
          </images>
        </configuration>
        <executions>
          <execution>
            <id>build</id>
            <goals>
              <goal>build</goal>
            </goals>
            <phase>install</phase>
          </execution>
          <execution>
            <id>push</id>
            <goals>
              <goal>push</goal>
            </goals>
            <phase>deploy</phase>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <phase>verify</phase>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

  <dependencies>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-content-services-share-distribution</artifactId>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-pdf-renderer</artifactId>
      <type>tgz</type>
      <classifier>linux</classifier>
    </dependency>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-platform-community-distributionzip</artifactId>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-backend-alfresco-module</artifactId>
      <type>amp</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-backend-tomcat</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-extension-${rootArtifactId}-repository-backend-alfresco-module</artifactId>
      <type>amp</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-extension-${rootArtifactId}-repository-config</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-extension-${rootArtifactId}-repository-webapp</artifactId>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>io.prometheus.jmx</groupId>
      <artifactId>jmx_prometheus_javaagent</artifactId>
    </dependency>

    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
    </dependency>

    <dependency>
      <groupId>org.redisson</groupId>
      <artifactId>redisson-all</artifactId>
    </dependency>

    <dependency>
      <groupId>org.redisson</groupId>
      <artifactId>redisson-tomcat-7</artifactId>
    </dependency>

  </dependencies>

  <profiles>

    <profile>

      <id>plugin-cluster</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_CLUSTER_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-plugin-cluster-repository-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-plugin-cluster-repository-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

      </dependencies>

    </profile>

    <profile>

      <id>plugin-remote</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_REMOTE_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-plugin-remote-repository-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-plugin-remote-repository-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

      </dependencies>

    </profile>

  </profiles>

</project>

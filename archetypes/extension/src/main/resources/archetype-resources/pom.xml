  <profiles>

    <profile>

      <id>plugin-cluster</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_CLUSTER_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <properties>

        <plugin.cluster.repository.version>feature-maven-${project.parent.version}</plugin.cluster.repository.version>

      </properties>

      <dependencyManagement>

        <dependencies>

          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>edu_sharing-plugin-cluster-repository-backend-alfresco-module</artifactId>
            <type>amp</type>
            <version>${plugin.cluster.repository.version}</version>
          </dependency>

          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>edu_sharing-plugin-cluster-repository-backend-services-core</artifactId>

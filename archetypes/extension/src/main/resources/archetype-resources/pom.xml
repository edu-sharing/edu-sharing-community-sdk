          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>edu_sharing-plugin-logineo-idm-repository-backend-services-core</artifactId>
            <version>${plugin.logineo-idm.repository.version}</version>
          </dependency>

          <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>edu_sharing-plugin-logineo-idm-repository-config</artifactId>
            <version>${plugin.logineo-idm.repository.version}</version>
            <classifier>sources</classifier>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${rootArtifactId}-deploy</artifactId>
    <version>${version}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>${artifactId}</artifactId>
  <packaging>pom</packaging>

  <name>${artifactId}</name>

  <properties>


    <docker.edu_sharing.community.repository.service>
      community/edu_sharing-community-repository-deploy-docker-build-service
    </docker.edu_sharing.community.repository.service>

    <docker.from.openjdk.11>
      dockerio.mirror.docker.edu-sharing.com/openjdk:11-jdk
    </docker.from.openjdk.11>

    <docker.edu_sharing.communty.common.repository>
      ${docker.registry}/community/common
    </docker.edu_sharing.communty.common.repository>

    <docker.edu_sharing.community.common.alfresco.repository>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-alfresco-repository:7.2
    </docker.edu_sharing.community.common.alfresco.repository>

    <docker.edu_sharing.community.common.alfresco.activemq>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-alfresco-activemq:5.16.5
    </docker.edu_sharing.community.common.alfresco.activemq>

    <docker.edu_sharing.community.common.alfresco.transform>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-alfresco-transform:1.0.0
    </docker.edu_sharing.community.common.alfresco.transform>

    <docker.edu_sharing.community.common.alfresco.transform.core.aio>
      ${docker.edu_sharing.communty.common.repository}/edu-sharing-community-common-alfresco-transformer-core-aio:2.6.0
    </docker.edu_sharing.community.common.alfresco.transform.core.aio>

    <docker.edu_sharing.community.common.alfresco.search.service>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-alfresco-search-service:2.0.3
    </docker.edu_sharing.community.common.alfresco.search.service>

    <docker.edu_sharing.community.common.postgresql>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-postgresql:${postgresql.version}
    </docker.edu_sharing.community.common.postgresql>

    <docker.edu_sharing.community.common.postgresql.exporter>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-postgresql-exporter:0.11.1
    </docker.edu_sharing.community.common.postgresql.exporter>

    <docker.edu_sharing.community.common.mailcatcher>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-mailcatcher:1.0.0
    </docker.edu_sharing.community.common.mailcatcher>

    <docker.edu_sharing.community.common.minideb>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-minideb:11
    </docker.edu_sharing.community.common.minideb>

    <docker.edu_sharing.community.common.redis>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-redis:6.2.7
    </docker.edu_sharing.community.common.redis>

    <docker.edu_sharing.community.common.redis.cluster>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-redis-cluster:6.2.7
    </docker.edu_sharing.community.common.redis.cluster>

    <docker.edu_sharing.community.common.redis.exporter>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-redis-exporter:1.45.0
    </docker.edu_sharing.community.common.redis.exporter>

    <docker.edu_sharing.community.common.varnish>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-varnish:0.35.0
    </docker.edu_sharing.community.common.varnish>

    <docker.edu_sharing.community.common.varnish.exporter>
      ${docker.edu_sharing.communty.common.repository}/edu_sharing-community-common-varnish-exporter:0.35.0
    </docker.edu_sharing.community.common.varnish.exporter>

    <helm.kube.version>&gt;= 1.20.0</helm.kube.version>
    <helm.version>3.10.0</helm.version>

    <phpredis.version>5.3.7</phpredis.version>
    <prometheus.jmx.version>0.17.2</prometheus.jmx.version>
    <redisson.version>3.18.0</redisson.version>

  </properties>

  <profiles>

    <profile>
      <id>docker.repository.service.remote</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.CI</name>
        </property>
      </activation>
      <properties>
        <docker.edu_sharing.community.repository.service>
          docker.edu-sharing.com/community/edu_sharing-community-repository-deploy-docker-build-service
        </docker.edu_sharing.community.repository.service>
      </properties>
    </profile>

    <profile>
      <id>deploy.deploy.docker.customer</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <file>
          <exists>customer/pom.xml</exists>
        </file>
      </activation>
      <modules>
        <module>customer</module>
      </modules>
    </profile>

  </profiles>

  <build>

    <pluginManagement>

      <plugins>

        <plugin>
          <groupId>io.kokuwa.maven</groupId>
          <artifactId>helm-maven-plugin</artifactId>
          <configuration>
            <helmVersion>${helm.version}</helmVersion>
          </configuration>
        </plugin>

      </plugins>

    </pluginManagement>

  </build>

</project>
